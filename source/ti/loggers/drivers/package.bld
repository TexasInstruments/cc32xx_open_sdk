/*
 *  ======== package.bld ========
 */

var Build = xdc.useModule('xdc.bld.BuildEnvironment');
var Pkg = xdc.useModule('xdc.bld.PackageContents');
var libBuilder = xdc.loadCapsule("ti/drivers/libBuilder.xs");

Pkg.attrs.exportSrc = true;
Pkg.generatedFiles.$add("lib/");

Pkg.otherFiles = [
    "LoggerITM.h",
    ".meta/Config.c.xdt",
    ".meta/Config.h.xdt",
    ".meta/GetLibs.syscfg.js",
    ".meta/LoggerITM.Config.c.xdt",
    ".meta/LoggerITM.Config.h.xdt",
    ".meta/LoggerITM.syscfg.js",
    ".meta/drivers.component.js",
    "makefile",
    "package.bld"
];

var srcs = [
    "LoggerITM.c"
];

let targets = [];
for (var i = 0; i < Build.targets.length; i++) {
    /*
     * Extract the target names as a string
     * http://rtsc.eclipseprojects.io/cdoc-tip/index.html#xdc/bld/ITarget.html
     */
    targets[i] = Build.targets[i].$name;
}

libBuilder.makeLibs("loggers", targets, srcs, "");
